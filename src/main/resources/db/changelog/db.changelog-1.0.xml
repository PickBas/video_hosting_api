<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

<!--    User-->
    
    <changeSet id="1.0.0" author="com.therearenotasksforus">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

<!--    Roles-->

    <changeSet id="1.0.1" author="com.therearenotasksforus">
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

<!--    User-roles table-->

    <changeSet id="1.0.2" author="com.therearenotasksforus">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
            </column>

            <column name="role_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

<!--    User-role relationships-->

    <changeSet id="1.0.3" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_roles_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

<!--    Role-user relationships-->

    <changeSet id="1.0.4" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_roles_roles"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>

<!--    Inserting data into role-->

    <changeSet id="1.0.5" author="com.therearenotasksforus">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

<!--    Profile-->

    <changeSet id="1.0.6" author="com.therearenotasksforus">
        <createTable tableName="profiles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="about_profile_info" type="VARCHAR(5000)">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="avatar_url" type="VARCHAR(1000)">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="gender" type="VARCHAR(5)">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="country" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>

            <column name="custom_url" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="is_private_sublist" type="BIT(1)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

<!--    User-profile table-->

    <changeSet id="1.0.7" author="com.therearenotasksforus">
        <createTable tableName="user_profiles">
            <column name="user_id" type="BIGINT">
            </column>

            <column name="profile_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

<!--    Profile-user relationships-->

    <changeSet id="1.0.8" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="profile_id"
                                 baseTableName="user_profiles"
                                 constraintName="fk_user_profiles_profiles"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="profiles"/>
    </changeSet>

<!--    User-profile relationships-->

    <changeSet id="1.0.9" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_profiles"
                                 constraintName="fk_user_profiles_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

<!--    Channel-->

    <changeSet id="1.0.10" author="com.therearenotasksforus">
        <createTable tableName="channels">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="info" type="VARCHAR(5000)">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>
    </changeSet>

<!--    Profile-channel table-->

    <changeSet id="1.0.11" author="com.therearenotasksforus">
        <createTable tableName="profile_channels">
            <column name="profile_id" type="BIGINT">
            </column>

            <column name="channel_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

<!--    Channels-profiles relationships-->

    <changeSet id="1.0.12" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="channel_id"
                                 baseTableName="profile_channels"
                                 constraintName="fk_profile_channels_channels"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="channels"/>
    </changeSet>

<!--    Profile-channels relationships-->

    <changeSet id="1.0.13" author="com.therearenotasksforus">
        <addForeignKeyConstraint baseColumnNames="profile_id"
                                 baseTableName="profile_channels"
                                 constraintName="fk_profile_channels_profile"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="profiles"/>
    </changeSet>

<!--    Invalid tokens-->
    <changeSet id="1.0.14" author="com.therearenotasksforus">
        <createTable tableName="invalid_tokens">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="token" type="VARCHAR(1000)">
                <constraints nullable="true" unique="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>